<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckActivity">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="652dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/sv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/svP_body"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Surname"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1. "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserSurname"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Имя"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_MiddleName"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2. "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserMiddleName"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Фамилия Отчество"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_BirthDatePlace"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3. "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserBirthDatePlace"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Дата и место рождения"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_DateOfIssue"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4a) "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserDateOfIssue"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Дата выдачи прав"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_DateOfExpiration"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4b) "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserDateOfExpiration"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Срок действия прав"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Division"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="4c) "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserDivision"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Подразделение"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Code"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5. "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserCode"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Номер"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_RegionOfResidence"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="8. "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserRegionOfResidence"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Регион проживания пользователя"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Categories"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="9. "
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/tv_UserCategories"
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Категории пользователя"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkType"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView45"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Тип проверки:"
                            android:textColor="#FFFFFF"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:buttonTint="#FFFFFF"
                                android:text="Проверка"
                                android:textColor="#FFFFFF"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/rb_fine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:buttonTint="#FFFFFF"
                                android:text="Штраф"
                                android:textColor="#FFFFFF"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkDescription"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Описание:"
                            android:textColor="#FFFFFF"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etCheck_Description"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:layout_weight="1"
                            android:backgroundTint="#FFFFFF"
                            android:ems="10"
                            android:textColor="#FFFFFF"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:gravity="top|start"
                            android:lines="5"
                            android:minLines="5"
                            android:maxLines="10"
                            android:scrollbars="vertical"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkFine"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCheck_Fine"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Размер:"
                            android:textColor="#FFFFFF"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etCheck_Fine"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#FFFFFF"
                            android:text="0"
                            android:ems="10"
                            android:textColor="#FFFFFF"
                            android:textSize="22dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Cancel"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FF5252"
                android:text="Отмена"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_СonfirmCheck"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF"
                android:text="Принять"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>